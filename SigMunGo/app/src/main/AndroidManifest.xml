<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sigmungo.sigmungo">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_sigmungo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_sigmungo"
        android:supportsRtl="true">
        <activity android:name=".Splash" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Landing" android:theme="@style/LandingTheme"/>
        <activity android:name=".SignIn" android:theme="@style/AppTheme"/>
        <activity android:name=".SignUp" android:theme="@style/AppTheme"/>
        <activity android:name=".Certification" android:theme="@style/AppTheme"/>
        <activity android:name=".Main" android:theme="@style/ToolbarTheme"/>
    </application>

</manifest>