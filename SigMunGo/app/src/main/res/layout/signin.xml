<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.sigmungo.sigmungo.SignIn">
<LinearLayout
    android:layout_width="450dp"
    android:layout_height="168dp"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <EditText
        android:id="@+id/input_id"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="아이디입력"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:textSize="20dp"
        android:layout_below="@+id/input_id"
        android:layout_alignLeft="@+id/input_id" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="비밀번호입력(6~15자리)"
        android:inputType="textPassword"
        android:textSize="20dp" />
</LinearLayout>
<LinearLayout
    android:layout_width="450dp"
    android:layout_height="110dp"
    android:id="@+id/linearLayout2"
    android:layout_below="@+id/linearLayout"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <Button
        android:id="@+id/signin"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle"
        android:text="로그인"
        android:textColor="@drawable/text"
        android:textSize="20dp" />


</LinearLayout>
<LinearLayout
    android:layout_width="450dp"
    android:layout_height="30dp"
    android:layout_below="@+id/linearLayout2"
    android:layout_alignParentLeft="true">

    <TextView
        android:id="@+id/forgetpassword"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="87dp"
        android:text="                       비밀번호를 잊어버렸나요?"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_margin="1dp"/>

    <TextView
        android:id="@+id/signup"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_toRightOf="@+id/singup"
        android:textSize="12dp"
        android:text="회원이 아니신가요?"
        android:layout_margin="1dp"
        android:textColor="#000000" />
</LinearLayout>
</RelativeLayout>
